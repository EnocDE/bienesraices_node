header(class="bg-neutral-800 text-white")
  div(class="container") 
    div(class="flex flex-col md:flex-row justify-between items-center gap-5 py-5")
      div
        a(href="/")
          h1(class="text-4xl font-extrabold") Bienes
            span(class="font-normal") Raices
      nav(class="flex items-center justify-center gap-5 flex-wrap text-sm font-semibold") 
        a(href="/auth/registro") Crear cuenta
        a(href="/auth/login") Iniciar sesión
div(class="hidden bg-neutral-800/95 lg:block py-3")
  div(class="flex justify-between px-5")
    nav(class="flex gap-4 items-center")
      a(href="/categorias/1" class="text-sm font-bold text-white") Casas
      a(href="/categorias/2" class="text-sm font-bold text-white") Departamentos
      a(href="/categorias/3" class="text-sm font-bold text-white") Bodegas
      a(href="/categorias/4" class="text-sm font-bold text-white") Terrenos
      a(href="/categorias/5" class="text-sm font-bold text-white") Cabañas

    form(class="flex gap-3 items-center" action="/buscador" method="POST")
      label(class="text-sm font-bold text-white" for="busqueda") Busqueda
      input#busqueda(class="py-2 px-3 rounded-lg shadow text-sm" type="text" name="busqueda" placeholder="Buscar propiedades")
      input(type="hidden" name="_csrf" value=csrfToken)
      input(class="full-btn text-sm border px-4 cursor-pointer text-white transition-base" type="submit" value="Buscar")
