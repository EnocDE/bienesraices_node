extends ../layout/admin

block styles
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
     integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
     crossorigin="")

block contenido 
  div(class="flex-1 flex items-center p-5")
          div(class="mx-auto w-full")
            h2(class="text-center text-4xl py-5 font-bold tracking-tighter max-w-lg mx-auto")= propiedad.nombre !== "" ? "Editando la propiedad:" : "Editar propiedad"
              span(class="block text-indigo-500 text-3xl")= propiedad.nombre 

            form(class="flex flex-col justify-center space-y-5 p-5 max-w-2xl shadow bg-white mx-auto rounded flex-1" action=`/propiedades/editar/${propiedad.id}` method="POST")
                div(class="space-y-1")
                  h3(class="font-semibold text-xl") Información general
                  p(class="") Añade información sobre la propiedad en venta

                div
                  label(class="block text-md mb-2 font-semibold text-neutral-500" for="titulo") Titulo de anuncio
                  input#titulo(class="w-full px-3 py-2 border border-gray-200 rounded" placeholder="Casa en la playa, Casa en el bosque..." type="text" name="nombre" value= propiedad.nombre ? propiedad.nombre : "")
                  if errores
                    each error in errores
                      if error.path === "nombre"
                        p(class="text-red-400 font-semibold before:content-['*']")= error.msg

                div
                  label(class="block text-md mb-2 font-semibold text-neutral-500" for="descripcion") Descripción
                  textarea#descripcion(class="w-full p-1 resize-none border h-28 rounded" name="descripcion" maxlength="500" )= propiedad.descripcion ? propiedad.descripcion : ""
                  if errores
                    each error in errores
                      if error.path === "descripcion"
                        p(class="text-red-400 font-semibold before:content-['*']")= error.msg

                div(class="md:flex gap-4 space-y-2 md:space-y-0")
                  div(class="flex-1")
                    label(class="block text-md mb-2 font-semibold text-neutral-500" for="categoria") Categoria
                    select#categoria(class="w-full px-3 py-2 border border-gray-200 rounded" name="categoria" )
                      option(value="" disabled selected) Selecciona
                      hr
                      each categoria in categorias
                        option(value= categoria.id selected= propiedad ? propiedad.categoriaId == categoria.id ? true : false : null)= categoria.nombre 
                    if errores
                      each error in errores
                        if error.path === "categoria"
                          p(class="text-red-400 font-semibold before:content-['*']")= error.msg

                  div(class="flex-1")
                    label(class="block text-md mb-2 font-semibold text-neutral-500" for="precio") Precio
                    select#precio(class="w-full px-3 py-2 border border-gray-200 rounded" name="precio" )
                      option(value="" disabled selected) Selecciona
                      hr
                      each precio in precios
                        option(value= precio.id selected= propiedad ? propiedad.precio == precio.id ? true : false : null)= precio.nombre
                    if errores
                      each error in errores
                        if error.path === "precio"
                          p(class="text-red-400 font-semibold before:content-['*']")= error.msg

                div(class="md:flex gap-4 space-y-2 md:space-y-0")
                  div(class="flex-1")
                    label(class="block text-md mb-2 font-semibold text-neutral-500" for="habitaciones") Habitaciones
                    select#habitaciones(class="w-full px-3 py-2 border border-gray-200 rounded" name="habitaciones" )
                      option(value="" disabled selected) Selecciona
                      hr
                      - var n = 1
                          while n <= 5
                            option(value=n selected= propiedad ? propiedad.habitaciones == n ? true : false : null) #{n++}
                    if errores
                      each error in errores
                        if error.path === "habitaciones"
                          p(class="text-red-400 font-semibold before:content-['*']")= error.msg

                  div(class="flex-1")
                    label(class="block text-md mb-2 font-semibold text-neutral-500" for="estacionamientos") Estacionamiento
                    select#estacionamientos(class="w-full px-3 py-2 border border-gray-200 rounded" name="estacionamientos" )
                      option(value="" disabled selected) Selecciona
                      hr
                      - var n = 1
                          while n <= 5
                            option(value=n selected= propiedad ? propiedad.estacionamientos == n ? true : false : null) #{n++}
                    if errores
                      each error in errores
                        if error.path === "estacionamientos"
                          p(class="text-red-400 font-semibold before:content-['*']")= error.msg

                  div(class="flex-1")
                    label(class="block text-md mb-2 font-semibold text-neutral-500" for="wc") Baños
                    select#wc(class="w-full px-3 py-2 border border-gray-200 rounded" name="wc" )
                      option(value="" disabled selected) Selecciona
                      hr
                      - var n = 1
                          while n <= 5
                            option(value=n selected= propiedad ? propiedad.wc == n ? true : false : null) #{n++}
                    if errores
                      each error in errores
                        if error.path === "wc"
                          p(class="text-red-400 font-semibold before:content-['*']")= error.msg

                div(class="space-y-1")
                  h3(class="font-semibold text-xl") Ubicación
                  p(class="") Añade la ubicación de la propiedad

                div#mapa(class="w-full bg-slate-400 h-72")
                
                div
                  p(class="calle")= calle ? calle : ""
                  if errores
                    each error in errores
                      if error.path === "calle" 
                        p(class="text-red-400 font-semibold before:content-['*']")= error.msg

                input#calle(type="hidden" name="calle" value= propiedad.calle ? propiedad.calle : "")
                input#lat(type="hidden" name="lat" value= propiedad.lat ? propiedad.lat : "")
                input#lng(type="hidden" name="lng" value= propiedad.lng ? propiedad.lng : "")
            
                input(type="hidden" name="_csrf" value=csrfToken)
                button(class="full-btn bg-indigo-500 hover:bg-indigo-600 text-white" type="submit") Guardar cambios

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")
