extends ../layout/index

block contenido
  div 
    div(class="grid place-content-center min-h-screen p-5")
      div(class="max-w-xl")
        h1(class="text-4xl font-extrabold text-center") Bienes
          span(class="font-normal") Raices
        h2(class="text-center text-2xl font-bold tracking-tighter mt-5")= pagina

        if imagen
          img(class="max-w-xs w-fit mx-auto mt-10" src=`/img/${imagen}`, alt="Message Image")
       
        div(class="space-y-3 text-lg mt-10")
          if nombre
            p Hola 
              span(class="font-bold") #{nombre}.
          p= msg
        a(class="mt-10 py-2 px-5 border text-center block w-full md:w-fit mx-auto" href="/auth/login") Volver 
